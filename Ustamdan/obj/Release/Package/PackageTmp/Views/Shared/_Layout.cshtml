<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

    <!-- Stylesheets
        ============================================= -->

    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Css/Ustamdan")
    <link href="~/Content/theme/font-icons.css" rel="stylesheet" type="text/css">
    <link rel="alternate" hreflang="en" href="http://www.ustamdan.com/en" />
    <link rel="alternate" hreflang="tr" href="http://www.ustamdan.com/tr" />
    <link rel="alternate" href="http://www.ustamdan.com/" hreflang="x-default" />
    <link rel="shortcut icon" href="~/Content/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon">

    <!--[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="title" content="@ViewBag.Title" />
    @if (ViewBag.Tags != null)
    {
        <meta name="keywords" content="@ViewBag.Tags" />
    }
    @if (ViewBag.Description != null)
    {
        <meta name="description" content="@ViewBag.Description" />
    }
    @if (ViewBag.Author != null)
    {
        <meta name="author" content="@ViewBag.Author" />
    }

    <title>@ViewBag.Title</title>

    <style>
        body {
            margin: 0;
        }
        /*#logo img{
            margin-top:25px;
            height:50px;
        }*/
    </style>
</head>
<body class="stretched load">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">


        <!-- Header
               ============================================= -->
        @{
            if (ViewBag.IsIndex == null)
            {
                ViewBag.IsIndex = false;
            }
        }
        <header id="header" class="@(ViewBag.IsIndex?"":"semi-")transparent-header dark">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <div id="logo" class="@(ViewBag.IsIndex?".gotoTop":"")">
                        <a href="@(ViewBag.IsIndex?"#":Url.Action("Index"))" class="standard-logo" data-dark-logo="/Content/img/iconlogowhite.png"><img src="~/Content/img/iconlogowhite.png" alt="Canvas Logo"></a>
                        <a href="@(ViewBag.IsIndex?"#":Url.Action("Index"))" class="retina-logo" data-dark-logo="/Content/img/iconlogowhite-lg.png"><img src="~/Content/img/iconlogowhite-lg.png" alt="Canvas Logo"></a>
                    </div><!-- #logo end -->
                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">

                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Home")"><div>USTAMDAN</div></a>
                            </li>
                            <li class="current">
                                <a href="@Url.Action("Blog","Home")"><div>@Resource.BlogTitle</div></a>
                            </li>
                            <li class="current">
                                <a href="@Url.Action("About","Home")"><div>@Resource.OurStoryTitle</div></a>
                            </li>
                            <li class="current">
                                <a href="@Url.Action("Contact","Home")"><div>@Resource.ContactTitle</div></a>
                            </li>
                            <li class="current">
                                <a href="#subscriptionModal" data-lightbox="inline" ><div>@Resource.IndexSubscriptionTitle</div></a>
                            </li>
                            <li class="current">
                                @Url.LangSwitcher(Resource.LanguageTitle, ViewContext.RouteData, Resource.LanguageTitle)
                                @*<a href="@Url.Action("Index","Home")"><div>EN</div></a>*@
                            </li>

                        </ul>

                        <!-- Top Search
                        ============================================= -->
                        <div id="top-search">
                            <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                            <form action="@Url.Action("Search")" method="get">
                                <input type="text" name="q" class="form-control" value="" placeholder="@Resource.SearchText">
                            </form>
                        </div><!-- #top-search end -->

                    </nav><!-- #primary-menu end -->

                </div>

            </div>

        </header><!-- #header end -->
        <!-- Modal -->
       

        @RenderBody()
        <!-- Footer
        ============================================= -->
        <footer id="footer" class="dark">
            @if (ViewBag.TinyFooter == null)
            {
                <div class="container">

                    <!-- Footer Widgets
                    ============================================= -->
                    <div class="footer-widgets-wrap clearfix">

                        <div class="">

                            <div class="col_one_third">

                                <div class="widget clearfix">

                                    <img src="~/Content/img/iconlogowhite.png" alt="" class="footer-logo">

                                    <div style="background: url('/Content/images/world-map.png') no-repeat center center; background-size: 100%;">
                                        <address>
                                            <strong>İTÜ ARI Teknokent San Francisco :</strong><br>
                                            Branch Office Galvanize
                                            44 Tehama St, Suite 303<br>
                                            San Francisco, CA 94105<br>
                                        </address>
                                        <address>
                                            <strong>ITÜ ArıTeknokent :</strong><br>
                                            Reşit Paşa Mah. Katar Cad.
                                            No:4 Iç Kapi No:1101 <br>
                                            Sariyer – Istanbul<br>
                                        </address>
                                        <abbr title="Email Address"><strong>Email:</strong></abbr> info@ustamdan.com<br>
                                        <abbr title="Web Site"><strong>Web Site:</strong></abbr> <a href="/">http://www.ustamdan.com</a>
                                    </div>

                                </div>

                            </div>

                            <div class="col_one_third">

                                <div class="widget widget_links clearfix">

                                    <h4>Instagram</h4>
                                    <iframe src="//lightwidget.com/widgets/1aa192955fe95f33a33eb83c0ac232a1.html" id="lightwidget_1aa192955f" name="lightwidget_1aa192955f" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width: 100%; border: 0; overflow: hidden;"></iframe>

                                </div>

                            </div>

                            <div class="col_one_third col_last">

                                <div class="widget clearfix">
                                    <h4>Twitter</h4>

                                    <div id="post-list-footer">
                                        <a class="twitter-timeline" data-lang="tr" data-height="400" data-theme="dark" href="https://twitter.com/ustamdan">Tweets by ustamdan</a>
                                        <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div><!-- .footer-widgets-wrap end -->

                </div>
            }
            <!-- Copyrights
            ============================================= -->
            <div id="copyrights">

                <div class="container clearfix">

                    <div class="col_one_third">
                        Ustamdan@2016
                    </div>
                    <div class="col_one_third">
                        <form class="widget-subscribe widget-subscribe-form2" role="form" method="post" style="max-width: 350px;">
                            <input type="email" id="widget-subscribe-form2-email" name="widget-subscribe-form-email" class="form-control input-lg not-dark required email" placeholder="@Resource.IndexSubscriptionEmailText">
                            <button class="button button-rounded button-border button-light noleftmargin" type="submit" style="margin-top:15px;text-transform:none">@Resource.IndexSubscriptionSubmitText</button>
                            <div class="success divcenter hidden">
                                <h4 style="color:#5cb85c;text-align:center">@Resource.IndexSubscriptionSuccessText</h4>
                            </div>
                        </form>
                    </div>
                    <div class="col_one_third col_last tright">
                        <div class="fright clearfix">
                            <a href="https://www.facebook.com/ustamdan" class="social-icon si-small si-borderless si-facebook">
                                <i class="icon-facebook"></i>
                                <i class="icon-facebook"></i>
                            </a>

                            <a href="https://twitter.com/ustamdan" class="social-icon si-small si-borderless si-twitter">
                                <i class="icon-twitter"></i>
                                <i class="icon-twitter"></i>
                            </a>
                            <a href="https://www.instagram.com/ustamdan/" class="social-icon si-small si-borderless si-instagram">
                                <i class="icon-instagram"></i>
                                <i class="icon-instagram"></i>
                            </a>
                        </div>

                        <div class="clear"></div>

                        <i class="icon-envelope2"></i> info@ustamdan.com <span class="middot">&middot;</span>
                    </div>

                </div>

            </div><!-- #copyrights end -->

        </footer><!-- #footer end -->
        <div class="modal1 mfp-hide subscribe-widget" id="subscriptionModal">
            <div class="block dark divcenter" style="background:rgba(85,85,85,0.6); background-size: cover; max-width: 700px;" data-height-lg="400">
                <div style="padding: 50px;">
                    <div class="heading-block nobottomborder bottommargin-sm" style="max-width:500px;">
                        <h3>@Resource.IndexSubscriptionTitle</h3>
                    </div>
                    <div class="widget-subscribe-form-result"></div>
                    <form class="widget-subscribe widget-subscribe-form2" role="form" method="post" style="max-width: 350px;">
                        <input type="email" id="widget-subscribe-form2-email" name="widget-subscribe-form-email" class="form-control input-lg not-dark required email" placeholder="@Resource.IndexSubscriptionEmailText">
                        <button class="button button-rounded button-border button-light noleftmargin" type="submit" style="margin-top:15px;text-transform:none">@Resource.IndexSubscriptionSubmitText</button>
                        <div class="success divcenter hidden">
                            <h4 style="color:#5cb85c;text-align:center">@Resource.IndexSubscriptionSuccessText</h4>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div><!-- #wrapper end -->
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up gotoTop"></div>


    @Scripts.Render("~/Script/Ustamdan")

    @RenderSection("scripts", false)
    <!-- LightWidget WIDGET -->
    <script src="//lightwidget.com/widgets/lightwidget.js"></script>
    <script>
        function clearHtmlTags(st) {
            var reg = /(<([^>]+)>)/ig;
            return st.replace(reg, "");
        }
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-61696275-1', 'auto');
        ga('send', 'pageview');

    </script>
    <script>
        $(".widget-subscribe-form2").on("submit", function (e) {
            e.preventDefault();
            var form = $(this);
            var email = form.find(".email").val();
            if (validateEmail(email)) {
                $.post("http://app.mailerlite.com/webforms/submit/i5f6k3", { 'fields[email]': email, 'ml-submit': 1 }, function (data) {
                    form.find(".success").removeClass("hidden");
                    form.find(".email").val('');
                    form.find("div.input-group").remove();
                });
            }
            return true;
        });
        function validateEmail(email) {
            var re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
        }

    </script>
</body>

</html>
