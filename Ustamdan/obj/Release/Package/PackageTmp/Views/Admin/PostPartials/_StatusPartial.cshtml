@model PostStatus?

<div class="x_panel tile">
    <div class="x_title">
        <h2>Status</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <h4>Select Post Status</h4>
        <div class="widget_summary">
            <form class="form-horizontal form-label-left">
                @foreach (PostStatus ps in Enum.GetValues(typeof(PostStatus)))
                {
                    <div class="radio">
                        <label>
                            @if (Model != null && Model == ps)
                            {
                                <input type="radio" class="flat" checked name="status" value="@ps"> @ps.ToString()
                            }
                            else if (Model == null && ps == PostStatus.Draft)
                            {
                                <input type="radio" class="flat" checked name="status" value="@ps"> @ps.ToString()
                            }
                            else
                            {
                                <input type="radio" class="flat" name="status" value="@ps"> @ps.ToString()
                            }
                        </label>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

