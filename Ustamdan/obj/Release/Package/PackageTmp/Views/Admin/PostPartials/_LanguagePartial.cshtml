@model Language?

<div class="x_panel tile">
    <div class="x_title">
        <h2>Language</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <h4>Select Language</h4>
        <div class="widget_summary">
            <form class="form-horizontal form-label-left">
                @foreach (Language lng in Enum.GetValues(typeof(Language)))
                {
                    <div class="radio">
                        <label>
                            @if (Model != null && Model == lng)
                            {
                                <input type="radio" class="flat" name="lang" checked value="@lng"> @lng.ToString()
                            }
                            else if (Model == null && Ustamdan.Models.AppData.DefaultLanguage == lng.GetStringValue())
                            {
                                <input type="radio" class="flat" name="lang" checked value="@lng"> @lng.ToString()
                            }
                            else
                            {
                                <input type="radio" class="flat" name="lang" value="@lng"> @lng.ToString()
                            }
                        </label>
                    </div>
                }
            </form>
        </div>
    </div>
</div>