                    <div class="col-md-3 col-sm-6 bottommargin">
                        <div class="ipost clearfix">
                            <div class="entry-image">
                                @if (post.PostType == PostType.Image)
                                {
                                    <a href="#"><img class="image_fade" src="@post.MediaURL" alt="@post.Title"></a>
                                }
                                else
                                {
                                    <iframe src="@post.MediaURL" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                                }
                            </div>
                            <div class="entry-title">
                                <h3><a href="@Url.Action("Post",new {id=post.Id })">@post.Title</a></h3>
                            </div>
                            <ul class="entry-meta clearfix">
                                <li><i class="icon-calendar3"></i> @post.DateCreated.ToShortDateString()</li>
                                <li>
                                    <i class="icon-folder-open"></i>
                                    @foreach (var cat in post.CategoryNames)
