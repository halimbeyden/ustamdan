                                               @:    infowindow.open(map, marker);
                                    @:};
                                    @:})(marker,content,infowindow));
                                    }
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBo6xedQToKACcfN2BzV54-3br245ytkBo&callback=initMap">
